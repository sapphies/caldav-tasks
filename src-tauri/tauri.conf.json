{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "caldav-tasks",
  "version": "0.5.1",
  "identifier": "moe.sapphic.caldav-tasks",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "caldav-tasks",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "backgroundColor": "#18181B",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "nsis", "msi", "dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "displayLanguageSelector": false
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIzOTVCODlGODdBNkM5QTkKUldTcHlhYUhuN2lWSTNRT2UzWlJ0OE5EV1pCNkJyM0o1L2lvRmZPSkxCeDZJRExPMGg2eE85ZzQK",
      "endpoints": ["https://github.com/sapphies/caldav-tasks/releases/latest/download/latest.json"]
    }
  }
}
